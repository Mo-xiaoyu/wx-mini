.section {
  overflow: hidden;
}

.section_title {
  display: flex;
  margin: 40rpx;
  overflow: hidden;
}

.section_title navigator {
  position: absolute;
  right: 20rpx;
  /* font-size: 30rpx; */
  color: var(--themeColor);
}

.more_active {
  color: #2b85e4;
  font-weight: 700;
  background-color: #fff;
}

.left_title {
  display: inline-block;
  padding-left: 16rpx;
  font-weight: 700;
  color: #333;
  border-left: 6rpx solid currentColor;
}

.section_content {
  height: 600rpx;
  /* background-color: #f1f1f1; */
  background-color: rgba(0, 0, 0, .02);
}

.ts_wrap {
  height: 300rpx;
  display: flex;
}

.ts_text {
  /* height: 100%; */
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 60rpx;
  font-weight: 600;
  margin: 14rpx;
  border-radius: 20rpx;
  background-color: rgba(0, 0, 0, .02);
  box-shadow: 0px 1px 3px rgba(0,0,0,.5);
}

.map_wrap {
  height: 800rpx;
  background-color: rgba(0, 0, 0, .02);
  margin: 14rpx;
  border-radius: 20rpx;
}

.question_wrap,.hotspot_wrap,.brand_wrap {
  height: 300rpx;
  display: flex;
}

.question_text,.hotspot_text,.brand_wrap {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 60rpx;
  font-weight: 600;
  margin: 14rpx;
  border-radius: 20rpx;
  background-color: rgba(0, 0, 0, .02);
  box-shadow: 0px 1px 3px rgba(0,0,0,.5);
}
.wrap_active {
  box-shadow: 0px 1px 5px rgba(0,0,0,.5);
}
.opinion_wrap {
  height: 460rpx;
  background-color: rgba(0, 0, 0, .02);
  margin: 14rpx;
  border-radius: 20rpx;
  box-shadow: 0px 1px 3px rgba(0,0,0,.5);
}

.footers {
  margin: 20rpx;
}

.footer_title {
  font-size: 30rpx;
  text-align: center;
  color: #b2bec3;
}

.footer_else {
  font-size: 28rpx;
  color: #b2bec3;
  margin: 20rpx;
}

.about_us {
  display: flex;
  justify-content: center;
  align-items: center;
}

.dot_div {
  color: #999;
  font-size: 30rpx;
  position: relative;
  margin: 20rpx 0;
}

.dot_div::before {
  content: " ";
  position: absolute;
  top: 50%;
  width: 260rpx;
  right: 140rpx;
  height: 1px;
  background: -webkit-linear-gradient(right, rgba(0, 0, 0, 0.2), #fff);
}

.dot_div::after {
  content: " ";
  position: absolute;
  top: 50%;
  width: 260rpx;
  left: 140rpx;
  height: 1px;
  background: -webkit-linear-gradient(left, rgba(0, 0, 0, 0.2), #fff);
}